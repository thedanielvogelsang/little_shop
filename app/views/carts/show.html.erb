<h1>Your Cart</h1>
<div>
<% @courses.each do |course|  %>
  <p><%= course.title %></p>
  <p><%= course.description %></p>
  <p><%= course.price %></p>
  <%= image_tag course.image %></p>
  <%= button_to "Remove", cart_path(course_id: course.id), method: "delete", id: "#{course.id}" %>
  <hr/>
<% end %>
</div>
<%= @cart.total_price %>
